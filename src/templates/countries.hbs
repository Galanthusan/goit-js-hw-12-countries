{{#each this}}
<li class="item list-group list-group-flush"></li>
    <div class="card border-0">
        <h2 class="country">{{name}}</h2>
        <p class="capital">Capital: {{capital}}</p>
        <p class="population">Population: {{population}}</p>
        <p class="languages">Languages:</h2>
        <ul class="languages-list">
          {{#each languages}}<li class="language-item list-group list-group-flush" >{{this.name}}</li>{{/each}}
            </ul>
        <img src="{{flag}}" class="rounded float-left" width="500px" height="300px" alt="{{name}}">
    </div>
</li>
{{/each}}